
alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias diff='colordiff'

alias quit='exit'
alias la='ls -a --color'
alias cls='clear && ls'
alias ..='cd ..'
alias nt='nautilus'
alias weather='/bin/ansiweather/./ansiweather'
alias forecast='/bin/ansiweather/./ansiweather -F'
alias daylight='/bin/ansiweather/./ansiweather -d true'
alias vim='gvim'
alias chrome='google-chrome'

alias gs='git status'
alias ga='git add'
alias gc='git commit -S -m'
alias gp='git push'
alias gd='git diff'
alias gsync='git pull && git push'
alias gl='git log --oneline --decorate'
alias gh='git log --color --pretty=format:"%C(yellow)%h%C(reset) %s%C(bold red)%d%C(reset) %C(green)%ad%C(reset) %C(blue)[%an]%C(reset)" --relative-date --decorate'

alias CompOrg="cd ~/Documents/School/CSCI-2500_Comp_Org"
