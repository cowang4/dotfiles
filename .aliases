alias ECON="cd ~/Documents/School/ECON-4130_Money&Banking"
alias MultiVar="cd ~/Documents/School/MATH-2010_MultiVar"

alias labs="cd labs"
alias hws="cd hws"
alias lectures="cd lectures"

function cd() {
  emulate -L zsh
  builtin cd $@ &&
  clear &&
  ls
}
